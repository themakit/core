{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
  }
  